{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/cron/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/v2/grants/*/enrich/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/ingest-grants",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/sync-grants",
      "schedule": "0 6,18 * * *"
    },
    {
      "path": "/api/cron/verify-links",
      "schedule": "0 3 * * 0"
    },
    {
      "path": "/api/cron/update-quality",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/cleanup-cache",
      "schedule": "0 5 * * *"
    }
  ]
}
